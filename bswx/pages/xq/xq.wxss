/* pages/xq/xq.wxss */
.center{
  height: 800rpx;
}
.xq-fix{
  position: fixed;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  background-color: pink;
}

.phone_personal{
    width: 100%;
    color:rgb(34, 154, 181);
    height:100rpx;
    line-height:100rpx;
    text-align: center;
}
.phone_one{
    display: flex; 
    position: relative;
    justify-content: space-between;
    background-color:rgb(239, 239, 239);
    width:100%;
    height:100rpx;
    margin:0 auto;
    border-radius: 10rpx;
    border-bottom:2rpx solid rgb(255, 255, 255);
    z-index: 1111;
}
.person_box{
    position: relative;
}
.phone_select{
    bottom:100rpx;
    z-index: 100;
    position: absolute; 
    width: 100%;
}
.select_one{
    text-align: center;
    background-color:rgb(239, 239, 239);
    width:100%; 
    height:100rpx;
    line-height:100rpx;
    border-bottom:2rpx solid rgb(255, 255, 255);
}
.personal_image{
    z-index: 100;
    position: absolute;
    right:2.5%;
    width: 35rpx;
    height: 20rpx;
    margin:40rpx 20rpx 40rpx 0;
    transition: All 0.4s ease;  
    -webkit-transition: All 0.4s ease;
}
.rotateRight{
    transform: rotate(180deg); 
}

.selectPerson_show{
  transition: all .5s;
  transform: translateY(100%);
}
.selectPerson_hidden{
  transition: all .5s;
  transform: translateY(-1%);
}
.conten_top_3r image{
  width: 44rpx;
  height: 44rpx;
}
.conten_top_3r{
  float: right;
  font-size: 30rpx;
}
.select_one text{
  float: left;
}
.zeroHidden
{
   display: none; 
}
.conten_top_3r  view{
  float: left;
  line-height: 100rpx;
  margin-top: 4rpx;
}
.conten_top_3r text{
  float: left;
  margin: 0 10rpx;
  line-height: 100rpx;
  margin-top: -4rpx;
}